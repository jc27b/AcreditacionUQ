<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#ca080c" />
            <gradient android:angle="-90" android:startColor="#690b0e" android:endColor="#f12d3a"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#bf0f1b" />
            <solid android:color="#6b0913"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="15dip" />
            <stroke android:width="1dip" android:color="#b10c14" />
            <gradient android:angle="-90" android:startColor="#bf080e" android:endColor="#fc0004" />
        </shape>
    </item>
</selector>