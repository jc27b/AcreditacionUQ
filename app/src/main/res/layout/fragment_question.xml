<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/one_card"
    tools:context="co.edu.uniquindio.android.electiva.acreditacionuq.fragment.QuestionFragment">

    <TextView
        android:id="@+id/text_enunciado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enunciado"
        android:textSize="@dimen/text_enunciado"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>

    <Button
        android:id="@+id/text_opcion_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opcion 1"
        android:textSize="@dimen/text_opcion"
        android:background="@drawable/mybutton"
        android:layout_marginTop="@dimen/margin_opciones"
        android:layout_below="@+id/text_enunciado"
        android:layout_alignLeft="@+id/text_enunciado"
        android:layout_alignStart="@+id/text_enunciado" />

    <Button
        android:id="@+id/text_opcion_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opcion 2"
        android:textSize="@dimen/text_opcion"
        android:background="@drawable/mybutton"
        android:layout_marginTop="@dimen/margin_opciones"
        android:layout_below="@+id/text_opcion_1"
        android:layout_alignLeft="@+id/text_opcion_1"
        android:layout_alignStart="@+id/text_opcion_1" />

    <Button
        android:id="@+id/text_opcion_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opcion 3"
        android:textSize="@dimen/text_opcion"
        android:background="@drawable/mybutton"
        android:layout_marginTop="@dimen/margin_opciones"
        android:layout_below="@+id/text_opcion_2"
        android:layout_alignLeft="@+id/text_opcion_2"
        android:layout_alignStart="@+id/text_opcion_2" />

    <Button
        android:id="@+id/text_opcion_4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Opcion 4"
        android:textSize="@dimen/text_opcion"
        android:background="@drawable/mybutton"
        android:layout_marginTop="@dimen/margin_opciones"
        android:layout_below="@+id/text_opcion_3"
        android:layout_alignLeft="@+id/text_opcion_3"
        android:layout_alignStart="@+id/text_opcion_3" />

</RelativeLayout>
